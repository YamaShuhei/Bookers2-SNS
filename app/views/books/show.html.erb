<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"70x70" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
            <%= render 'favorite', book: @book %>
          </td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>

            <div>
              <p>comment count:<%= @book.book_comments.count %></p>
              <% @book.book_comments.each do |book_comment| %>
              <%= image_tag book_comment.user.get_profile_image, size:"50x50" %>
              <%= book_comment.comment %>
              <% if book_comment.user == current_user %>
                <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %>
              <% end %>
              <p><%= link_to book_comment.user.name, user_path(book_comment.user_id) %></p>
              <% end %>
            </div>
            <div>
              <%= form_with model: [@book, @book_comment] do |f| %>
              <%= f.text_area :comment, rows:'6' ,cols:'60', placeholder: "comment is here" %>
                <p><%= f.submit "送信" %></p>
              <% end %>
            </div>
        </div>
    </div>
  </div>
</div>