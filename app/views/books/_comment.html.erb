            <div>
              <% book.book_comments.each do |book_comment| %>
                <%= image_tag book_comment.user.get_profile_image, size:"50x50" %>
                <%= book_comment.comment %>
                <% if book_comment.user == current_user %>
                  <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment),local: false,remote: true, method: :delete, class: "btn btn-danger" %>
                <% end %>
                <p><%= link_to book_comment.user.name, user_path(book_comment.user_id) %></p>
              <% end %>
            </div>
            <div>
              <%= form_with(model:[book, book_comment],local: false,remote: true) do |f| %>
                <%= f.text_area :comment, rows:'6' ,cols:'60', placeholder: "comment is here" %>
                <p><%= f.submit "送信" %></p>
              <% end %>
            </div>
